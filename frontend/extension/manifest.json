{
  "manifest_version": 3,
  "name": "Chromium History Chat",
  "version": "0.1.11",
  "description": "Chat with your browsing history using AI",
  "author": "Chromium History Extension Team",

  "permissions": [
    "history",
    "storage"
  ],

  "host_permissions": [
    "https://api.archlife.org/*",
    "wss://api.archlife.org/*",
    "http://localhost:3000/*",
    "ws://localhost:3000/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },

  "options_page": "options/options.html"
}
